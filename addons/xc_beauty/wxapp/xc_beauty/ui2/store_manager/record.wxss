page {
    background: #f7f7f7;
    padding-top: 10rpx;
    box-sizing: border-box;
}

.nav {
    height: 90rpx;
    background: #fff;
    position: fixed;
    top: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    border-bottom: #ddd 2rpx solid;
}

.nav>view {
    flex: 1;
    text-align: center;
    line-height: 90rpx;
    color: #999999;
    font-size: 4vw;
    margin: 0 80rpx;
}

.nav>view.curr {
    color: #444444;
    border-bottom: #444444 4rpx solid;
    box-sizing: border-box;
}

.nav_block {
    height: 90rpx;
}

.list {
    background: #fff;
    padding: 0 20rpx;
}

.list .item {
    padding: 20rpx 0;
    display: flex;
    color: #999999;
}

.list .item+.item {
    border-top: #ddd 2rpx dashed;
}

.list .item>image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.list .item>view:nth-child(2) {
    flex: 1;
}

.list .price {
    color: #191919;
}