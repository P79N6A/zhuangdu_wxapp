page{
  background: #fff;
}
.edit-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 30pt;
  font-size: 11pt;
}
.header-delive{
  color: #fd2c6b;
}
.edit-main,.edit-footer {
    padding: 60rpx 60rpx;
}
.edit-text{
  height: 180rpx;
  overflow-y: scroll;
  font-size: 13pt;
  line-height: 20pt;
  color: #353535;
}
.edit-img {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-between;
}
.edit-img  image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 10rpx 10rpx 0;
}
.bg-upload{
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(87,107,149,0.1);
  font-size: 40pt;
  color: #888;
  line-height: 200rpx;
  text-align: center;
  position: relative;
}
.bg-upload image{
  display: block;
  width: 45px;
  height: 45px;
  position: absolute;
  left:26px;
  top:26px;
}
.footer-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 13pt;
  border-top: 1rpx solid rgba(87,107,149,0.1);
}
.footer-row>text:nth-child(2){
    flex-grow: 1;
    text-indent: 0.5rem;
}
.edit-icon{
  display:block;
  width:24px;
  height:24px;
}