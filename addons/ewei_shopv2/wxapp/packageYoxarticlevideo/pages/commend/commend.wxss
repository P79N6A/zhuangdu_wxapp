.commend-content{
    background: #fff;
    height:200px;
}
.commend-header{
    height: 80rpx;
    border-bottom: 2px solid #ffab21;
}
.bigtitle{
    font-size:38rpx;
    color:#ffab21;
    float:left;
    margin-top:20rpx;
    margin-left:32rpx;
}
.all{
    float:right;
    width: 50px;
    height: 20px;
    line-height: 20px; 
    font-size: 10px;
    border: 1px solid #ccc;
    text-align: center;
    margin-top:20rpx;
    margin-right:12rpx;
}
.commend-main{
    position: relative;
    padding: 0 6px;
    padding-top: 26rpx;
    padding-left: 0rpx;
    width: 100%;
    height: 154px;
    background: #fff;
    border-bottom: 1px solid #f0f0f0;
}
.commend-cell{
    width: 500rpx;
    /* float: left; */
    position: relative;
    margin-left: 120rpx;
}
.commend-cell video{
    width: 100%;
    height: 112px;
}
.commend-cell image{
    width: 100%;
    height: 100px;
}
.commend-cell .readBox{
    width:100%;
    height:40rpx;
    background:#000;
    opacity:0.5;
    font-size:12px;
    position:absolute;
    bottom:100rpx;
    left:0;
    line-height:20px;
}
.commend-cell .readBox text{
    color: #fff;
    opacity: 0.8;
    z-index: 1;
    margin-left:12rpx;
}
.title{
    font-size: 12px; 
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-left:166px;
}
.time{
    font-size: 12px;
    color: #ccc;
    margin-left:128px;
}
.scoll-h{
  height: 100%;
}