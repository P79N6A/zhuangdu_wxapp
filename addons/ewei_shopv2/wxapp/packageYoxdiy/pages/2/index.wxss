.nav{
  background-color:white;
  height:100rpx;
  width:100%;
  display:flex;
  justify-content:space-around;
}
.nav view{
  line-height:100rpx;
}
.active text{
  color:#fd2d6b;
  padding-bottom:10rpx;
  border-bottom:5rpx solid #fd2d6b;
}
.list{
  width:100%;
}

.detail{
  margin-top:40rpx;
  width:315rpx;
  height:282rpx;
  margin-left:40rpx;
  float:left;
}
.detail image{
  width:100%;
  height:100%;
}


.shadow{
  width:100%;
  height:100%;
  position:fixed;
  top: 0;
  left: 0;
  background:rgba(0, 0, 0, 0.4);
  opacity:0.6;
  z-index:101;
  display:flex;
  align-items:center;
  justify-content:center;

}

.result_block{
  width:90%;
  z-index:1000;
  position:absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
      display:flex;
      flex-direction:column;
 align-items:center;
  justify-content:center;
}
.success_img{
    min-height:600rpx;
    width:100%;
    margin-bottom:40rpx;
}
.result_block button{
  width:520rpx;
  height:60rpx;
  background-color:#fd2d6b;
  color:white;
  border-radius:10rpx;
  border:none;
  line-height:60rpx;
}