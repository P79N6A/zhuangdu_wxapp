.comment_list{
  width: 100%;
  height: auto;
}
.titleBox{
  width:100%;
  height:20px;
  font-size:32rpx;
  color:#333;
  border-bottom:2px solid #ccc;
  padding:15px 20px;
}
.titleBox image{
  width: 20px;
  height: 20px;
}
.titleBox text{
  margin-left:8px;
}
.bgfff{
  background: #fff;
}
.comment_cell{
  min-height:200px;
  margin-bottom:6px;
}
.comment_cell .avatar{
  float: left;
  margin-left:20px;
  margin-top:16px;
}
.comment_cell .avatar image{
  width: 42px;
  height: 42px;
  border-radius: 21px;
}
.comment_cell .nickname{
  font-size: 32rpx;
}
.comment_cell .content{
  width: 270px;
  font-size: 28rpx;
  margin-top:14px;
}
.comment_cell .time{
  font-size:22rpx;
  color: #c4c4c4;
  float: right;
  /* margin-bottom:12px; */
  margin-top:108px;
  margin-right:12px;
}
.comment-fixed{
  width: 100%;
  height: 58px;
  background:#f3f3f3;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-left:12px;
}
.comment-fixed .comment-input{
  width:80%;
  height:40px;
  background:#fff;
  border-radius:20px;
  font-size:28rpx;
  margin-top:8px;
  color:#707070;
}
.comment-fixed .comment-input image{
  width:32px;
  height:32px;
  margin-left:16px;
  margin-top:4px;
  float:left;
}
.comment-fixed .comment-input text{
  display:block;
  float:left;
  margin:9px 10px;
}