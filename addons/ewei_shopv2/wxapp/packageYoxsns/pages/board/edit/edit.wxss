page{
  background: #fff;
}
.edit-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 30pt;
  font-size: 11pt;
}
.header-delive{
  color: #fd2c6b;
  margin-right: 0px;
  background: transparent;
  font-size: 11pt;
  border-radius: 0;/*一般使用这个就是可以去掉边框了*/
}
.header-delive::after{
  border: none;
}
.edit-main,.edit-footer {
    padding: 60rpx 60rpx;
}
.edit-text{
  height: 180rpx;
  overflow-y: scroll;
  font-size: 13pt;
  line-height: 20pt;
  color: #353535;
}
.edit-img {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-between;
}
.edit-img  image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 10rpx 10rpx 0;
}
