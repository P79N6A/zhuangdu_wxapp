.footer-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 13pt;
  border-top: 1rpx solid rgba(87,107,149,0.1);
}
.footer-row>text:nth-child(2){
    flex-grow: 1;
    text-indent: 0.5rem;
}
.edit-icon{
  display:block;
  width:24px;
  height:24px;
}
.img-box{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background:#fff; 
    line-height: 200rpx;
    text-align: center;
    position: relative;
    justify-content: flex-start;
    align-content: space-between;
}
.img{
    width: 100px;
    height: 100px;  
    position: relative;
}
.img image{
    width: 100%;
    height: 100%;
}
.delete-btn{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30px;
    font-size: 12px;
    color: #fff;
    background: rgba(0,0,0,.5);
    text-align: center;
    line-height: 30px;
}
.upload-img-btn{
    width: 100px;
    height: 100px;
    text-align: center;
    line-height: 100px;
    background: #ccc;
    border: 1px solid #ccc;
    margin-bottom:10px;
    margin-left:10px;
}
