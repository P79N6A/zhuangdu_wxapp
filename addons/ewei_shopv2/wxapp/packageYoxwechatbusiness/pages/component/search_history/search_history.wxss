.searchBox{
  width: 100%;
  height:46px;
  border-bottom: 1px solid #f1f1f1;
  background: #fff;
  padding-top:16px;
}
.searchBox .search{
  width: 300px;
  height: 30px;
  border-radius: 30px;
  background: #f0f0f0;
  margin-left:10px;
}
.searchBox .search image{
  width:14px;
  height:14px;
  float:left;
  margin-left:20px;
  margin-top:8px;
}
.searchBox .search input{
  float: right;
  margin-right:78px;
  margin-top:2px;
}
.top-tab{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff; 
  font-size: 15px; 
  white-space: nowrap;
  border-bottom: 1px solid #f1f1f1;
  padding-left:20px;
}
.top-tab-item{
  margin:0 40px;
  display: inline-block;
}
.top-tab-item.active{
  position: relative;
  color: #fd2c6b;
}
.top-tab-item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 48px;
  background: #fd2c6b;
  position: absolute; 
  bottom: 0;
  left: -8px;
  border-radius: 16rpx;
}
.searchText{
  position:absolute;
  left:318px;
  top:20px;
  width:44px;
  color:#fd2c6b;
  font-size:34rpx;
}