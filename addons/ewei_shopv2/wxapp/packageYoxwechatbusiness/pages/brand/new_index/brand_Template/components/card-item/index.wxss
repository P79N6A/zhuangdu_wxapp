.mp-swipe-card-item {
  height: 100%;
  width: 100%;
  padding: 20rpx;
  /* background: linear-gradient(to right bottom, red, orange, green, purple); */
}
.mp-swipe-card-item .main-title{
  width: 100px;
  position: absolute;
  z-index: 10;
}
.mp-swipe-card-item .main-title text{
  color: #fff;
  float: right;
  margin-top:-20px;
  margin-right:10px;
}
.mp-swipe-card-item .big-image{
  height: 254px;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.mp-swipe-card-item .content{
  width: 100%;
  height: 60px;
  position: absolute;
  left: 0;
  bottom: 0;
}
.mp-swipe-card-item .content .image{
  width: 47px;
  height: 47px;
  float: left;
  background: #fd2c6b;
  margin-left: 10px;
  margin-top: 8px;
}
.mp-swipe-card-item .content .image image{
  width: 100%;
  height: 100%;
}
.mp-swipe-card-item .content_right{
  float: right;
  margin-right: 150px;
  margin-top: 12px;
}
.mp-swipe-card-item .content_right .title{
  font-size: 26rpx;
}
.mp-swipe-card-item .content_right .explain{
  font-size: 20rpx;
  color: #ccc;
}