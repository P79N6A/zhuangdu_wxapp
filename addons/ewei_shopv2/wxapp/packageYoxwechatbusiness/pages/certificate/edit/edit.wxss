.img-box{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background:#fff; 
    padding-left:10px;
}
.img{
    width: 100px;
    height: 100px;  
    position: relative;
    margin-right: 10px;
}
.img image{
    width: 100%;
    height: 100%;
}
.delete-btn{
    position: absolute;
    bottom: 0;
