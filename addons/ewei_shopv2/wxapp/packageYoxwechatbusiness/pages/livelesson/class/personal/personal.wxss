@import "./personal_template/personal_template.wxss";
.top-tab{
  height: 100rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 100rpx;
  background: #fff; 
  font-size: 16px; 
  white-space: nowrap;
  border-bottom: 1px solid #f1f1f1;
  background: #fd2c6b;
  color: #fff;
}
.top-tab-item{
  margin:0 46px;
  display: inline-block;
}
.top-tab-item.active{
  position: relative;
}
.top-tab-item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 30px;
  background: #fff;
  position: absolute; 
  bottom: 0;
  left: 0px;
  border-radius: 16rpx;
}