@import "./wait_template/wait_template.wxss";
@import "./my_template/my_template.wxss";
page{
  background: #fff;
}
.top-tab{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff; 
  font-size: 16px; 
  white-space: nowrap;
  border-bottom: 1px solid #f1f1f1;
}
.top-tab-item{
  margin:0 50px;
  display: inline-block;
}
.top-tab-item.active{
  position: relative;
  font-weight: bold;
}
.top-tab-item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 30px;
  background: #fd2c6b;
  position: absolute; 
  bottom: 0;
  left: 18px;
  border-radius: 16rpx;
}