@import "./class_template/class_template.wxss";
@import "./judge_template/judge_template.wxss";
.bgfff{
  background: #FFF;
}
.baseimg{
  width: 100%;
  height: 100%;
}
.image{
  width: 100%;
  height: 226px;
  position: relative;
}
.times{
  width: 100%;
  height: 36px;
  line-height: 36px;
  background: #000;
  opacity: 0.4;
  color: #fff;
  font-size:26rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.content {
  width: 100%;
  height:124px;
padding-top:20px;
}
.content .title{
  font-size: 18px;
  font-weight: bold;
  margin-left:14px;
  margin-bottom:8px;
}
.content .futitle{
  width: 228px;
  height: 20px;
  margin-left:14px;
  font-size: 12px;
  color: #e0e0e0;
}
.cicular{
  width: 16px;
  height: 16px;
  border: 1px solid #e0e0e0;
  border-radius: 16px;
  margin-right:4px;
}
.button{
  width: 328px;
  height: 38px;
  border-radius: 10px;
  background: #fd2d6b;
  line-height: 38px;
  margin-left:14px;
  color: #fff;
}
.button .button_text{
  margin-left: 40px;
  margin-top:10px;
  font-size: 12px;
}
.button .button_text text{
  font-weight: bold;
  font-size: 16px;
}
.button .l_button{
  width: 88px;
  height: 38px;
  border-radius: 10px;
  background: #000;
  font-weight: bold;
  text-align: center;
  font-size: 14px;
}
.top-tab{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff; 
  font-size: 15px; 
  white-space: nowrap;
  border-bottom: 1px solid #f1f1f1;
}
.top-tab-item{
  margin:0 34px;
  display: inline-block;
}
.top-tab-item.active{
  position: relative;
  font-weight: bold;
}
.top-tab-item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 30px;
  background: #fd2c6b;
  position: absolute; 
  bottom: 0;
  left: 12px;
  border-radius: 16rpx;
}