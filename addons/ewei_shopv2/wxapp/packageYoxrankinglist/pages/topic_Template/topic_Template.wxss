.topic_cell{
  width:100%;
  height: 94px;
  background: #fff;
  border-bottom: 1px solid #e4e4e4;
}
.topic_cell .image{
  width:66px;
  height: 66px;
  float: left;
  position: relative;
  margin-left:24px;
  margin-top:14px;
  margin-right:14px;
}
.topic_cell .line{
  width:14px;
  height:16px;
  background: #fd2c6b;
  position: absolute;
  top:0;
  left: 0;
}
.topic_cell .image::after{
  display:block;
  content:"";
  border-width:8px 8px 8px 8px;
  border-style:solid;
  border-color:#fd2c6b transparent transparent transparent;
  position:absolute;
  left:-1px;
  top:16px;
}
.topic_cell .image image{
  background: #ccc;
  width:100%;
  height: 100%;
}
.topic_cell .topic_cell_left{
  float: left;
}
.topic_cell .title{
  font-size: 30rpx;
  margin-top:26px;
}
