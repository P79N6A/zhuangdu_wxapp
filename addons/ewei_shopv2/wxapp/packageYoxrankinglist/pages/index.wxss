.titleBox{
  width: 100%;
  height: 130px;
  background: #fd2c6b;
  padding-top:25px;
}
.titleBox .title{
  width:200px;
  font-size:74rpx;
  color: #fff;
  font-weight: bolder;
  margin-left:35%;
}
.searchBox{
  width: 280px;
  height: 24px;
  border-radius: 10px;
  background: #fff;
  margin-top:32px;
  margin-left:48px;
  padding-top:4px;
  position: relative;
}
.searchBox image{
  width:12px;
  height: 12px;
  margin-left:81px;
  margin-top:2px;
}
.searchBox button{
  width: 70px;
  height: 50px;
  line-height: 50px;
  color: #a9a9a9;
  position: absolute;
  left:196px;
  font-size: 14px;
  top:-8px;
  border:none;
  background: transparent;
}
.searchBox button::after{
  display: none;
}
.searchBox .searchinput{
  width: 156px;
  height: 28px;
  float: right;
  margin-right:56px;
  font-size: 12px;
  color: #a9a9a9;
}
.searchBox text{
  font-size: 24rpx;
  color: #a9a9a9;
  margin-left:4px;
}
.top-tab{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff; 
  font-size: 15px; 
  white-space: nowrap;
}
.top-tab-item{
  margin:0 24px;
  display: inline-block;
}
.top-tab-item.active{
  position: relative;
}
.top-tab-item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 48px;
  background: #fd2c6b;
  position: absolute; 
  bottom: 0;
  left: -2px;
  border-radius: 16rpx;
}
