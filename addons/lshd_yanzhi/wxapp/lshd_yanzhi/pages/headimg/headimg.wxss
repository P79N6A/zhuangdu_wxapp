.homeView {
    width: 100vw;
    height: 100vh;
}

.headerView {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.dashed {
    width: 100%;
    border-bottom: 1px dashed #d3d3d3;
    margin: 5px 0;
}

.header-title {
    color: lightgrey;
}

.header-button {
    width: 80%;
    font-size: 14px;
    line-height: 22px;
    padding: 8px 0;
    background-color: #ff6600;
    color: #fff;
}

button[class="header-button"]::after {
    border: 0;
}

.userinfo-avatar {
    width: 80vw;
    height: 80vw;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-V {
    width: 25vw;
    height: 25vw;
    border-radius: 50%;
    position: absolute;
    top: 10vw;
    right: 10vw;
}

.footerView {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.kind-list {
    width: 100vw;
    display: flex;
    white-space: nowrap;
}

.kind-list-item {
    width: 50px;
    height: 50px;
    background-color: #c4c5ca;
    display: inline-block;
    margin: 5px;
    text-align: center;
    border-radius: 5px;
}

.kind-list-img {
    width: 30px;
    height: 30px;
    margin-top: 10px;
}

.preview {
    width: 95%;
    font-size: 14px;
    line-height: 22px;
    padding: 8px 0;
    background-color: #ff6600;
    color: #fff;
    margin-top: 20px;
}

.choice {
    width: 95%;
    font-size: 14px;
    line-height: 22px;
    padding: 8px 0;
    margin-top: 20px;
}

.save {
    width: 80vw;
    height: 44px;
    background-color: #ff6600;
    border-radius: 22px;
}

button[class="choice"]::after {
    border: 0;
}

.footerView-bottom {
    margin: 20px 0;
    display: flex;
}

.moreView {
    display: flex;
    align-items: center;
    margin-right: 5px;
}

.more {
    width: 20rpx;
    height: 20rpx;
}

.moreText {
    color: #3668FF;
    font-size: 11px;
}

.shareView {
    display: flex;
    align-items: center;
    margin-left: 5px;
}

.share {
    width: 20rpx;
    height: 20rpx;
}

.shareText {
    color: #3668FF;
    font-size: 11px;
}

.tab-content {
    width: 100%;
}

.tab-content .models {
    padding: 18rpx 0;
}

.models {
    width: 100%;
    white-space: nowrap;
    box-sizing: border-box;
    padding: 20rpx 0;
}

.models .model {
    position: relative;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    margin-right: 12rpx;
    overflow: hidden;
    display: inline-block;
    border: 2rpx solid #fff;
    box-sizing: border-box;
}

.models .model:first-child {
    margin-left: 30rpx;
}

.models .model.active {
    border-color: #0F30C3;
}

.models .model image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.models .model .text {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    color: #343638;
    background-color: #fff;
    font-size: 20rpx;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    opacity: .9;
    z-index: 2;
}