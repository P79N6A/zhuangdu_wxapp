.btn {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 0;
    border: 0;
}

.top-nav-bar {
    position: fixed;
    top: 0;
    z-index: 9999;
}

.top-nav-bar-bottom {
    display: flex;
    align-items: center;
}

.option-item {
    width: 54rpx;
    height: 54rpx;
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,0.3);
    background: rgba(0,0,0,0.3);
    margin-left: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}